<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Ofnifile.ViewModels"
        xmlns:views="using:Ofnifile.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Ofnifile.Views.MainWindow"
        x:DataType="vm:MainWindowVM"
        Icon="/Assets/avalonia-logo.ico"
        Title="Ofnifile">

  <Grid>
    
    <Grid.ColumnDefinitions>
      <ColumnDefinition MaxWidth="200"/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    
    <Grid.RowDefinitions>
      <RowDefinition MaxHeight="150"/>
      <RowDefinition/>
    </Grid.RowDefinitions>

    <Grid Grid.ColumnSpan="2" Grid.Row="0" Background="Red">
      <TextBlock Text="Feed"/>
    </Grid>
    <Grid Grid.Column="0" Grid.Row="1" Background="Blue">
      <TextBlock Text="QuickBar"/>
    </Grid>
    <views:ExplorerControl Grid.Column="1" Grid.Row="1" DataContext="{Binding ExplorerVM}" />
    
  </Grid>
  

</Window>
